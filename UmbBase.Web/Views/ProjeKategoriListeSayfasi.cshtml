@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ProjectCategoryListPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
    var allProjectsText = Common.Translate("Content.Projects.AllProjects");
    var selectedCategory = Request.QueryString["cat"];
    var allCategories = Projects.GetAllCategoriesForCurrentLanguage();
    var pageTitle = string.IsNullOrEmpty(selectedCategory) ? allProjectsText.ToString() : selectedCategory.ToUpper();
    var projects = Projects.GetAllProjectsForCategory(selectedCategory);
}

@{
    <div class="content">
        <section class="parallax-section">
            <div class="parallax-inner">
                <div class="bg" data-bg="@Common.GetBannerFromContentItem(CurrentPage,"Carousel")" data-top-bottom="transform: translateY(300px);" data-bottom-top="transform: translateY(-300px);"></div>
                <div class="overlay"></div>
            </div>
            <div class="container">
                <div class="page-title">
                    <div class="row">
                        <div class="col-md-6">
                            <h2>@pageTitle.ToUpper() <strong>Sayfası</strong></h2>
                        </div>
                        <div class="col-md-6">
                            <ul class="creat-list">
                                <li><a href="/">Anasayfa</a></li>
                                <li><a href="#">@pageTitle</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}
@{
    if (projects != null)
    {
        var itemIndex = 1;
        <div class="content">
            <section>
                <div class="container">
                    @if (allCategories != null)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <ul class="creat-list">
                                    @foreach (var category in allCategories)
                                    {
                                        <li><a href="@Projects.CreateCategoryListUrl(@category.categoryName)" data-filter=""><h3>@category.categoryName</h3></a></li>
                                    }
                                    <li class="pull-right"><a href="@Projects.CreateAllCategoryListUrl()">@allProjectsText</a></li>
                                </ul>

                            </div>
                        </div>
                    }
                    @foreach (var item in projects)
                    {
                        if (itemIndex % 2 != 0)
                        {
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="parallax-item left-direction">
                                        <div class="paralax-media">
                                            <ul class="creat-list">
                                                <li><a>@(((DateTime)item.pagePublishDate).ToString("dd")) @(((DateTime)item.pagePublishDate).ToString("MMM"))</a></li>
                                                <li><a href="@item.Url">@item.pageTitle</a></li>
                                            </ul>
                                            <div class="paralax-wrap">
                                                <img src="@Common.GetThumbnailFromContentItem(item,"HomepageProject")" class="respimg" alt="">
                                            </div>
                                        </div>
                                        <div class="parallax-deck" data-top-bottom="transform: translateY(-200px);" data-bottom-top="transform: translateY(200px);">
                                            <div class="parallax-deck-item">
                                                <h3><strong>@item.pageTitle</strong></h3>
                                                <a href="@item.Url" class="btn anim-button fl-l"><span>@Common.Translate("Homepage.ViewProject")</span><i class="fa fa-long-arrow-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5"></div>
                            </div>
                            itemIndex++;
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-md-5"></div>
                                <div class="col-md-7">
                                    <div class="parallax-item left-direction">
                                        <div class="paralax-media">
                                            <ul class="creat-list">
                                                <li><a>@(((DateTime)item.pagePublishDate).ToString("dd")) @(((DateTime)item.pagePublishDate).ToString("MMM"))</a></li>
                                                <li><a href="@item.Url">@item.pageTitle</a></li>
                                            </ul>
                                            <div class="paralax-wrap">
                                                <img src="@Common.GetThumbnailFromContentItem(item,"HomepageProject")" class="respimg" alt="">
                                            </div>
                                        </div>
                                        <div class="parallax-deck" data-top-bottom="transform: translateY(-200px);" data-bottom-top="transform: translateY(200px);">
                                            <div class="parallax-deck-item">
                                                <h3><strong>@item.pageTitle</strong></h3>
                                                <a href="@item.Url" class="btn anim-button fl-l"><span>@Common.Translate("Homepage.ViewProject")</span><i class="fa fa-long-arrow-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            itemIndex++;
                        }

                    }
                </div>
            </section>
        </div>
    }
}