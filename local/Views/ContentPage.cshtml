@using UmbBase.Web.Business
@using Umbraco.Web.Models

@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    Layout = "Master.cshtml";
}

@{
    { Html.RenderPartial("PageBanner"); }
}
<div class="content">
    <section id="sec1">
        <div class="sect-subtitle right-align-dec" data-top-bottom="transform: translateY(200px);" data-bottom-top="transform: translateY(-200px);"><span>01</span></div>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    @if (!string.IsNullOrEmpty(CurrentPage.pageSubTitle.ToString()))
                    {
                        <div class="col-md-12">
                            <h2 class="section-title"><strong> @CurrentPage.pageSubTitle</strong></h2>
                        </div>
                    }
                    <div class="col-md-12">
                        <img src="@Common.GetBannerFromContentItem(CurrentPage,"PageBanner")" class="respimg" alt="">
                    </div>
                    @CurrentPage.contentText
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </section>
</div>

<div class="content">
    <section>
        <div class="sect-subtitle right-align-dec" data-top-bottom="transform: translateY(200px);" data-bottom-top="transform: translateY(-200px);"><span>02</span></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title  dec-title"><span><strong>@Common.Translate("Content.OurFantasticTeam")</strong></span></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <ul class="team-holder">
                        @{

                            var gallery = Umbraco.Content(CurrentPage.pageGallery);
                            if (gallery != null && gallery.Children.Any())
                            {

                                foreach (var image in gallery.Children)
                                {
                                    <li>
                                        <div class="team-box" data-top-bottom="transform: translateY(-50px);" data-bottom-top="transform: translateY(50px);">
                                            <div class="team-photo">
                                                <div class="overlay"></div>
                                                <img src="@Common.GetHorizontalThumbnailFromGalleryItem(image)" class="respimg">
                                            </div>
                                            <div class="team-info">
                                                <h3><a href="@image.galleryImageFile.Src">@image.galleryImageTitle</a></h3>
                                                <h4>@image.galleryImageDescription</h4>
                                            </div>
                                        </div>
                                    </li>
                                }

                            }

                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>
